<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0">

    <title>@ViewBag.Title - Systema Inventario  </title>

    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,400,600,700,300&subset=latin" rel="stylesheet" type="text/css">
    <link href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" rel="stylesheet" type="text/css">
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link href="~/Content/bootstrap-glyphicons.css" rel="stylesheet" />
    <!-- holder.js -->
    <script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/holder/2.9.0/holder.js"></script>
    <style>
        .page-header-form .input-group-addon,
        .page-header-form .form-control {
            background: rgba(0,0,0,.05);
        }
    </style>
    <!-- jQuery -->
    @*<script src="http://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>*@
    @Styles.Render("~/Content/assets/css")
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
</head>
<body>

    <nav class="px-nav px-nav-left">

        <button type="button" class="px-nav-toggle" data-toggle="px-nav">
            <span class="px-nav-toggle-arrow"></span>
            <span class="navbar-toggle-icon"></span>
            <span class="px-nav-toggle-label font-size-11">Esconder Menú</span>
        </button>

        <ul class="px-nav-content">

            <li class="px-nav-item px-nav-dropdown">
                <a href="#"><i class="glyphicon glyphicon-home"></i><span class="px-nav-label">&nbsp;&nbsp;Inventario</span></a>

                <ul class="px-nav-dropdown-menu">
                    <li class="px-nav-item"><a href="@Url.Action("IngresarInventario","Inventario")"><span class="px-nav-label">Ingresar Inventario</span></a></li>
                </ul>
            </li>
            <li class="px-nav-item px-nav-dropdown">
                <a href="#"><i class="glyphicon glyphicon-book"></i><span class="px-nav-label">&nbsp;&nbsp;Catalogos de Inventario</span></a>

                <ul class="px-nav-dropdown-menu">
                    <li class="px-nav-item"><a href="@Url.Action("MostrarDatos","Inventario")"><span class="px-nav-label">Catalogos de Inventario de Informatica</span></a></li>
                </ul>
                <ul class="px-nav-dropdown-menu">
                    <li class="px-nav-item"><a href="@Url.Action("TomaInventarioInformatica","Inventario")"><span class="px-nav-label">Toma de Inventario</span></a></li>
                </ul>
                <ul class="px-nav-dropdown-menu">
                    <li class="px-nav-item"><a href="@Url.Action("MostrarDatos","Inventario")"><span class="px-nav-label"> Catalogo Toma de Inventario</span></a></li>
                </ul>
            </li>

            <li class="px-nav-item px-nav-dropdown">
                <a href="#"><i class="glyphicon glyphicon-indent-left"></i><span class="px-nav-label">&nbsp;&nbsp;Indicadores</span></a>

                <ul class="px-nav-dropdown-menu">
                    <li class="px-nav-item"><a href="@Url.Action("Indicadores","Inventario")"><span class="px-nav-label">Indicador</span></a></li>
                </ul>

            </li>

            <li class="px-nav-item px-nav-dropdown">
                <a href="#"><i class="glyphicon glyphicon-lock"></i><span class="px-nav-label">&nbsp;&nbsp;Seguridad</span></a>

                <ul class="px-nav-dropdown-menu">
                    <li class="px-nav-item"><a href="@Url.Action("SeguridadUsuarios","Seguridad")"><span class="px-nav-label">Usuario</span></a></li>
                </ul>
                <!--<ul class="px-nav-dropdown-menu">
                    <li class="px-nav-item"><a href="@Url.Action("AdminRoles","Seguridad")"><span class="px-nav-label">Roles</span></a></li>
                </ul>
                <ul class="px-nav-dropdown-menu">
                    <li class="px-nav-item"><a href="@Url.Action("Permisos","Seguridad")"><span class="px-nav-label">Permisos</span></a></li>
                </ul>-->
            </li>

        </ul>

    </nav>

    <!--Barra de Navegación Superior-->
    <nav class="navbar px-navbar">
        <!--Encabezado-->
        <div class="navbar-header">
            <a class="navbar-brand px-demo-brand" href="@Url.Action("Inicio","Home")">
                system Inventario
            </a>
        </div>
        <div class="collapse navbar-collapse" id="px-demo-navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="@Url.Action("LogOut","Home")" role="button">
                        <i class="glyphicon glyphicon-log-out " data-logout-msg="Esta seguro de cerrar sesion?"></i>
                        Cerrar sesión
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    <div id="wait" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content" style="border:none">
                <div>
                    <div id="" style="position:absolute;top:50%;left:50%;padding:2px;">
                        <img src='../../Resource/images.png' width="64" height="64" />
                        <br><h2 style="color:white">Cargando...</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--Cuerpo en sí de la Pagína-->
    <div class="px-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Content/assets/js")
    <script src="~/Scripts/qrcode.js"></script>
    <script src="~/Scripts/bootbox.js"></script>
    <script type="text/javascript">
        // -------------------------------------------------------------------------
        // Initialize DEMO

        $(function () {
            var file = String(document.location).split('/').pop();

            // Remove unnecessary file parts
            file = file.replace(/(\.html).*/i, '$1');

            if (!/.html$/i.test(file)) {
                file = 'index.html';
            }

            // Activate current nav item
            $('body > .px-nav')
                .find('.px-nav-item > a[href="' + file + '"]')
                .parent()
                .addClass('active');

            $('body > .px-nav').pxNav();
            $('body > .px-footer').pxFooter();

            $('#navbar-notifications').perfectScrollbar();
            $('#navbar-messages').perfectScrollbar();
        });

    </script>
    @RenderSection("scripts", required: false)
</body>
</html>